doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        title Perudo
        link(rel='shortcut icon' href='#')
        link(rel='stylesheet', href='/stylesheets/hub.css', type="text/css")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.1.3/socket.io.js", type="text/js")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css")
        style.
            body { margin: 0; }
        script(type="importmap").
            {
                "imports": {
                    "three": "https://unpkg.com/three@0.155.0/build/three.module.js",
                    "three/addons/": "https://unpkg.com/three@0.155.0/examples/jsm/"
                }
            }
        script(src="/scripts/hub-client.js")
    body
        .server-list
            each server in servers
                .server
                    h2= server.name
                    p Players: #{server.playerCount}
                    p Game Status: #{server.isGameRunning ? "In Progress" : "Not Started"}
                    if !server.isGameRunning
                        button.connect-button Connect
